@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>engineer</h1>

@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
} 

<table class ="table table-borderd table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Engineer Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Age
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Engineer engineer in Model)
        {
            <tr class="table table-hover table-secondary">
                <td width 10%>
                    @engineer.EngineerId
                </td>
                <td width 50%>
                    @engineer.EngineerName
                </td>
                <td width 30%>
                    @engineer.PhoneNumber
                </td>
                <td width 30%>
                    @engineer.Age
                </td>
                <td>
                @Html.ActionLink("Details", "Details", new { id = @engineer.EngineerId}, new { @class = "btn btn-outline-warning" })
                </td>
                <td>
                  @Html.ActionLink("Edit", "Edit", new { id = @engineer.EngineerId}, new { @class = "btn btn-outline-warning" })
                </td>
                <td>
                @Html.ActionLink("Delete", "Delete", new { id = @engineer.EngineerId}, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.ActionLink("Add Engineer", "Create", new { id = 0}, new { @class = "btn btn-outline-success" })