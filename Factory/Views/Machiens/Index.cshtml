@{
  Layout = "_Layout";
}

@using Factory.Models;

<h1>All Factory Machines</h1>

<table class ="table table-borderd table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Machine Name
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(Machien machiens in Model)
        {
            <tr class="table table-hover table-secondary">
                <td width 10%>
                    @machiens.MachienId
                </td>
                <td width 50%>
                    @machiens.MachienName
                </td>
                <td>
                @Html.ActionLink("Details", "Details", new { id = @machiens.MachienId}, new { @class = "btn btn-outline-warning" })
                </td>
                <td>
                @Html.ActionLink("Edit", "Edit", new { id = @machiens.MachienId}, new { @class = "btn btn-outline-warning" })
                </td>
                <td>
                @Html.ActionLink("Delete", "Delete", new { id = @machiens.MachienId}, new { @class = "btn btn-outline-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<p>@Html.ActionLink("Add New Machine", "Create", new { id = 1 }, new { @class = "btn btn-outline-success" })</p>